{
  "manifest_version": 2,
  "name": "IFS Queue Monitor",
  "version": "0.1",
  "permissions": ["storage", "notifications", "alarms", "https://support.ifs.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ifs-queue-monitor@local",
      "strict_min_version": "74.0"
    }
  },
  "applications": {
    "gecko": {
      "id": "ifs-queue-monitor@local",
      "strict_min_version": "74.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://support.ifs.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
