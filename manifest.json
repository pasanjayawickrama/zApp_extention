{
  "manifest_version": 3,
  "name": "IFS Queue Monitor",
  "version": "0.1",
  "permissions": ["storage", "notifications", "alarms"],
  "host_permissions": ["https://support.ifs.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://support.ifs.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
